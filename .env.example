# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Vision-Language Model API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# DVLA API Configuration
DVLA_API_KEY=your_dvla_api_key_here
DVLA_API_URL=https://driver-vehicle-licensing.api.gov.uk/vehicle-enquiry/v1/vehicles
DVLA_TIMEOUT=30

# Vision Model Configuration
PRIMARY_VISION_MODEL=claude-3-5-sonnet
SECONDARY_VISION_MODELS=["gpt-4-vision-preview", "gemini-pro-vision"]

# Claude Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.1

# OpenAI Configuration
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# Google Gemini Configuration
GEMINI_MODEL=gemini-pro-vision
GEMINI_TEMPERATURE=0.1

# Ensemble Configuration
ENSEMBLE_VOTING_STRATEGY=weighted
MINIMUM_MODEL_AGREEMENT=2
CONFIDENCE_THRESHOLD=0.85

# Image Processing Configuration
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_ENHANCEMENT_ENABLED=true
CONTRAST_ENHANCEMENT=1.2
SHARPNESS_ENHANCEMENT=1.1

# Validation Configuration
MIN_CONFIDENCE_SCORE=0.9
REQUIRE_DVLA_VALIDATION=true
MAX_VALIDATION_RETRIES=3
ENABLE_MANUAL_REVIEW_FLAGGING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mot_ocr.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Performance Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=300
MODEL_TIMEOUT=60

# File Storage Configuration
UPLOAD_DIR=uploads
RESULTS_DIR=results
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=[".jpg", ".jpeg", ".png", ".bmp", ".tiff", ".webp"]
